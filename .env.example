# Database Configuration
# These values are used by both PostgreSQL container and Rails application

# PostgreSQL container credentials (used by db service in docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=app_development

# Rails database connection
DATABASE_HOST=db  # Use 'db' for Docker Compose, 'localhost' for local development

# Rails Configuration
RAILS_MAX_THREADS=5
RAILS_ENV=development

# Test Environment (optional overrides)
# POSTGRES_DB=app_test  # Uncomment for test environment

# Production Configuration
# For production, use DATABASE_URL instead of individual credentials:
# DATABASE_URL=postgresql://username:password@host:5432/database_name

# Weather API (stored in Rails credentials, not .env)
# Run: EDITOR="code --wait" rails credentials:edit
# Add:
#   weather_api:
#     key: YOUR_TOMORROW_IO_API_KEY
