<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">My Trips</h1>
      <p class="text-gray-600 mt-1">View and manage all your planned trips</p>
    </div>
    <%= link_to new_trip_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition shadow-md hover:shadow-lg" do %>
      <span class="flex items-center">
        <span class="mr-2">âœˆï¸</span>
        Plan New Trip
      </span>
    <% end %>
  </div>

  <% if @trips.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @trips.each do |trip| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition overflow-hidden">
          <!-- Trip Header -->
          <div class="bg-gradient-to-r from-blue-500 to-blue-600 text-white p-6">
            <h2 class="text-2xl font-bold mb-2"><%= trip.city %></h2>
            <p class="text-blue-100">
              <%= trip.start_date.strftime("%b %d") %> - <%= trip.end_date.strftime("%b %d, %Y") %>
            </p>
          </div>

          <!-- Trip Body -->
          <div class="p-6">
            <!-- Status Badge -->
            <div class="mb-4">
              <% case trip.status %>
              <% when 'pending' %>
                <span class="inline-flex items-center bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-semibold">
                  <span class="mr-1">â³</span>
                  Pending
                </span>
              <% when 'processing' %>
                <span class="inline-flex items-center bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
                  <span class="mr-1">ğŸ”„</span>
                  Processing
                </span>
              <% when 'ready' %>
                <span class="inline-flex items-center bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
                  <span class="mr-1">âœ…</span>
                  Ready
                </span>
              <% when 'failed' %>
                <span class="inline-flex items-center bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-semibold">
                  <span class="mr-1">âŒ</span>
                  Failed
                </span>
              <% end %>
            </div>

            <!-- View Button -->
            <%= link_to trip_path(trip), class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition text-center" do %>
              View Details â†’
            <% end %>

            <!-- Delete Button -->
            <%= button_to trip_path(trip), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this trip?" }, class: "block w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition text-center mt-2" do %>
              Delete Trip
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <div class="mb-6">
        <span class="text-6xl">âœˆï¸</span>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">No trips planned yet</h2>
      <p class="text-gray-600 mb-6">Start planning your next adventure and get personalized packing recommendations!</p>
      <%= link_to new_trip_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition shadow-md hover:shadow-lg" do %>
        <span class="flex items-center">
          <span class="mr-2">+</span>
          Plan Your First Trip
        </span>
      <% end %>
    </div>
  <% end %>
</div>
