<div class="max-w-6xl mx-auto">
  <!-- Trip Header -->
  <div class="bg-white rounded-lg shadow-md p-8 mb-6">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-2">
          <span class="mr-2">âœˆï¸</span><%= @trip.city %>
        </h1>
        <p class="text-lg text-gray-600 mb-4">
          <%= @trip.start_date.strftime("%B %d, %Y") %> - <%= @trip.end_date.strftime("%B %d, %Y") %>
          <span class="text-blue-600 font-semibold">(<%= @trip.duration_in_days %> days)</span>
        </p>
      </div>

      <!-- Status Badge -->
      <div>
        <% case @trip.status %>
        <% when 'pending' %>
          <span class="inline-flex items-center bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full font-semibold text-lg">
            <span class="mr-2">â³</span>
            Pending
          </span>
        <% when 'processing' %>
          <span class="inline-flex items-center bg-blue-100 text-blue-800 px-4 py-2 rounded-full font-semibold text-lg">
            <span class="mr-2">ğŸ”„</span>
            Processing
          </span>
        <% when 'ready' %>
          <span class="inline-flex items-center bg-green-100 text-green-800 px-4 py-2 rounded-full font-semibold text-lg">
            <span class="mr-2">âœ…</span>
            Ready
          </span>
        <% when 'failed' %>
          <span class="inline-flex items-center bg-red-100 text-red-800 px-4 py-2 rounded-full font-semibold text-lg">
            <span class="mr-2">âŒ</span>
            Failed
          </span>
        <% end %>
      </div>
    </div>

    <!-- Status Messages -->
    <div class="mt-4 space-y-4">
      <% case @trip.status %>
      <% when 'pending' %>
        <div class="bg-yellow-50 border-l-4 border-yellow-600 text-yellow-800 p-4 rounded-md">
          <p class="font-medium">Your trip is in the queue.</p>
          <p class="text-sm mt-1">Weather data will be fetched shortly. This usually takes just a few seconds.</p>
        </div>
      <% when 'processing' %>
        <div class="bg-blue-50 border-l-4 border-blue-600 text-blue-800 p-4 rounded-md">
          <p class="font-medium">We're fetching weather forecasts and analyzing clothing recommendations.</p>
          <p class="text-sm mt-1">Refresh the page to check progress.</p>
        </div>
      <% when 'failed' %>
        <div class="bg-red-50 border-l-4 border-red-600 text-red-800 p-4 rounded-md">
          <p class="font-medium">Unable to fetch weather data</p>
          <p class="text-sm mt-1">This may be due to an API error or invalid city name. Please try creating a new trip.</p>
        </div>
      <% end %>

      <!-- 5-day limitation warning for trips longer than 5 days -->
      <% if @trip.duration_in_days > 5 %>
        <div class="bg-orange-50 border-l-4 border-orange-600 text-orange-800 p-4 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <span class="text-xl">âš ï¸</span>
            </div>
            <div class="ml-3">
              <p class="font-medium">Limited weather forecast availability</p>
              <p class="text-sm mt-1">
                Your trip is <%= @trip.duration_in_days %> days long, but due to Tomorrow.io API limitations (free tier),
                we can only provide weather forecasts and recommendations for the <strong>first 5 days</strong> of your trip.
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Weather Forecast Section -->
  <% if @trip.forecasts.any? %>
    <div class="bg-white rounded-lg shadow-md p-8 mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <span class="mr-2">ğŸŒ¤ï¸</span>
        Weather Forecast
      </h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Date</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Conditions</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">High / Low</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Feels Like</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Rain</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">UV Index</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @trip.forecasts.order(:date).each do |forecast| %>
              <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= forecast.date.strftime("%a, %b %d") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                  <%= forecast.conditions %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <span class="text-red-600 font-semibold"><%= forecast.temperature_max&.round(0) %>Â°F</span>
                  <span class="text-gray-400 mx-1">/</span>
                  <span class="text-blue-600 font-semibold"><%= forecast.temperature_min&.round(0) %>Â°F</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= forecast.temperature_apparent_max&.round(0) %>Â°F / <%= forecast.temperature_apparent_min&.round(0) %>Â°F
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% rain_prob = forecast.precipitation_probability&.round(0) || 0 %>
                  <span class="<%= rain_prob > 30 ? 'text-blue-600 font-bold' : 'text-gray-500' %>">
                    <%= rain_prob %>%
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% uv = forecast.uv_index_max || 0 %>
                  <span class="<%= uv >= 6 ? 'text-orange-600 font-bold' : 'text-gray-500' %>">
                    <%= uv %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <!-- Recommendations Section -->
  <% if @trip.recommendations.any? %>
    <div class="bg-white rounded-lg shadow-md p-8 mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-2 flex items-center">
        <span class="mr-2">ğŸ’</span>
        Packing Recommendations
      </h2>
      <p class="text-gray-600 mb-6">
        Based on the weather forecast, here's what we recommend bringing:
      </p>

      <div class="grid md:grid-cols-2 gap-6">
        <% @trip.recommendations.order(:clothing_category).each do |rec| %>
          <div class="border-l-4 border-blue-600 bg-blue-50 p-6 rounded-lg hover:bg-blue-100 transition">
            <h3 class="text-lg font-bold text-gray-900 mb-3 flex items-center">
              <% case rec.clothing_category %>
              <% when 'outerwear' %>
                <span class="text-2xl mr-2">ğŸ§¥</span> Outerwear
              <% when 'tops' %>
                <span class="text-2xl mr-2">ğŸ‘•</span> Tops
              <% when 'bottoms' %>
                <span class="text-2xl mr-2">ğŸ‘–</span> Bottoms
              <% when 'footwear' %>
                <span class="text-2xl mr-2">ğŸ‘Ÿ</span> Footwear
              <% when 'accessories' %>
                <span class="text-2xl mr-2">ğŸ’</span> Accessories
              <% end %>
            </h3>
            <p class="text-gray-700 leading-relaxed"><%= rec.details %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Action Buttons -->
  <div class="flex gap-4">
    <%= link_to trips_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg transition shadow-md" do %>
      <span class="flex items-center">
        <span class="mr-2">â†</span>
        Back to Trips
      </span>
    <% end %>
    <% if @trip.ready? %>
      <%= button_to trip_path(@trip), method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this trip and all its recommendations?" },
          class: "bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition shadow-md" do %>
        <span class="flex items-center">
          <span class="mr-2">ğŸ—‘ï¸</span>
          Delete Trip
        </span>
      <% end %>
    <% end %>
  </div>
</div>
