<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Plan Your Trip</h1>
    <p class="text-gray-600 mb-6">Tell us where you're going and when, and we'll help you pack the perfect wardrobe.</p>

    <%= form_with(model: @trip, class: "space-y-6") do |form| %>
      <% if @trip.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-600 text-red-800 p-4 rounded-md">
          <h2 class="font-bold mb-2"><%= pluralize(@trip.errors.count, "error") %> prevented this trip from being saved:</h2>
          <ul class="list-disc list-inside space-y-1">
            <% @trip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- City Field -->
      <div>
        <%= form.label :city, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
          <span class="flex items-center">
            <span class="mr-2">üåç</span>
            Destination City
          </span>
        <% end %>
        <%= form.text_field :city,
            placeholder: "e.g., Paris, Tokyo, New York",
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
        <p class="text-sm text-gray-500 mt-1">Enter the city you'll be visiting</p>
      </div>

      <!-- Date Fields -->
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Start Date -->
        <div>
          <%= form.label :start_date, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <span class="flex items-center">
              <span class="mr-2">üìÖ</span>
              Start Date
            </span>
          <% end %>
          <%= form.date_field :start_date,
              min: Date.today,
              value: Date.today,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
        </div>

        <!-- End Date -->
        <div>
          <%= form.label :end_date, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <span class="flex items-center">
              <span class="mr-2">üìÖ</span>
              End Date
            </span>
          <% end %>
          <%= form.date_field :end_date,
              min: Date.today,
              value: Date.today + 3.days,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
        </div>
      </div>

      <!-- Info Box -->
      <div class="bg-blue-50 border-l-4 border-blue-600 text-blue-800 p-4 rounded-md">
        <div class="flex">
          <div class="flex-shrink-0">
            <span class="text-xl">‚ÑπÔ∏è</span>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium mb-1">Weather forecasts are limited to 5 days</p>
            <p class="text-sm">Due to Tomorrow.io API limitations (free tier), we can only provide weather data and recommendations for the first 5 days of your trip. Trips longer than 5 days are supported, but forecasts will only cover days 1-5.</p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-4 pt-4">
        <%= form.submit "Get Weather & Recommendations",
            class: "flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition shadow-md hover:shadow-lg cursor-pointer" %>
        <%= link_to "Cancel", trips_path,
            class: "flex-1 bg-white hover:bg-gray-50 text-gray-700 font-bold py-3 px-6 rounded-lg border-2 border-gray-300 transition text-center" %>
      </div>
    <% end %>
  </div>

  <!-- Help Text -->
  <div class="mt-6 bg-white rounded-lg shadow-sm p-6">
    <h3 class="font-semibold text-gray-900 mb-3">What happens next?</h3>
    <ol class="space-y-2 text-sm text-gray-600">
      <li class="flex items-start">
        <span class="font-bold text-blue-600 mr-2">1.</span>
        <span>We'll fetch the weather forecast for your destination</span>
      </li>
      <li class="flex items-start">
        <span class="font-bold text-blue-600 mr-2">2.</span>
        <span>Our system will analyze temperature, precipitation, and UV index</span>
      </li>
      <li class="flex items-start">
        <span class="font-bold text-blue-600 mr-2">3.</span>
        <span>You'll receive personalized clothing recommendations for your trip</span>
      </li>
    </ol>
  </div>
</div>
